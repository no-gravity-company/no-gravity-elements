{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/components/**/*"
    ],
    "scripts": {
        "clean": "yarn cache clean --force",
        "hard-clean": "rm -rf node_modules && yarn cache clean --force",
        "build": "tsc && node ./esbuild.js",
        "watch": "node ./esbuild.js --watch",
        "component-generator": "node node_modules/@no-gravity-tools/component-generator/lib/index.js",
        "lint": "yarn eslint .",
        "fix-lint": "yarn eslint . --fix",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "cypress:open": "cypress open",
        "e2e": "cypress run",
        "format": "yarn prettier --write .",
        "link-tools": "lerna exec -- yarn link",
        "unlink-tools": "lerna exec -- yarn link",
        "test": "karma start",
        "test:update": "UPDATE=1 PRUNE=1 karma start"
    },
    "devDependencies": {
        "@babel/core": "^7.21.0",
        "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
        "@no-gravity-tools/component-generator": "1.0.14",
        "@open-wc/testing": "^3.1.7",
        "@open-wc/testing-helpers": "^2.1.4",
        "@storybook/addon-actions": "^6.5.16",
        "@storybook/addon-essentials": "^6.5.16",
        "@storybook/addon-interactions": "^6.5.16",
        "@storybook/addon-links": "^6.5.16",
        "@storybook/builder-webpack5": "^6.5.16",
        "@storybook/manager-webpack5": "^6.5.16",
        "@storybook/preact": "^6.5.16",
        "@storybook/testing-library": "^0.0.13",
        "@types/mocha-each": "^2.0.0",
        "@types/node": "^18.14.5",
        "@types/preact-custom-element": "^4.0.1",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.54.0",
        "babel-loader": "^8.3.0",
        "chokidar": "^3.5.3",
        "core-js": "^3.29.0",
        "cypress": "^12.7.0",
        "esbuild": "^0.16.10",
        "chai": "^4.3.7",
        "chai-karma-snapshot": "^0.8.0",
        "esbuild-loader": "^3.0.1",
        "eslint": "^8.35.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "karma": "^6.4.1",
        "karma-chai": "^0.1.0",
        "karma-chrome-launcher": "^3.1.1",
        "karma-coverage-istanbul-reporter": "^3.0.3",
        "karma-esbuild": "^2.2.5",
        "karma-mocha": "^2.0.1",
        "karma-mocha-snapshot": "^0.2.1",
        "karma-snapshot": "^0.6.0",
        "karma-sourcemap-loader": "^0.4.0",
        "karma-spec-reporter": "^0.0.36",
        "karma-typescript": "^5.5.3",
        "lerna": "^6.5.1",
        "mocha": "^10.2.0",
        "prettier": "^2.8.4",
        "sinon": "^15.0.1",
        "tiny-glob": "^0.2.9",
        "tsconfig-paths-webpack-plugin": "^4.0.0",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@preact/signals": "^1.1.3",
        "preact": "^10.13.0",
        "preact-compat": "^3.19.0",
        "preact-custom-element": "^4.2.1"
    }
}
