{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/components/**/*"
    ],
    "scripts": {
        "clean": "yarn cache clean --force",
        "hard-clean": "rm -rf node_modules && yarn cache clean --force",
        "build": "tsc && node ./esbuild.js",
        "watch": "node ./esbuild.js --watch",
        "component-generator": "node node_modules/@no-gravity-tools/component-generator/lib/index.js",
        "lint": "yarn eslint .",
        "fix-lint": "yarn eslint . --fix",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "cypress:open": "cypress open",
        "e2e": "cypress run",
        "format": "yarn prettier --write .",
        "link-tools": "lerna exec -- yarn link",
        "unlink-tools": "lerna exec -- yarn link",
        "test": "jest",
        "coverage": "http-server -o coverage/lcov-report",
        "test:coverage": "yarn test && yarn coverage"
    },
    "devDependencies": {
        "@babel/core": "^7.21.0",
        "@babel/preset-env": "^7.20.2",
        "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
        "@no-gravity-tools/component-generator": "1.0.12",
        "@storybook/addon-actions": "^6.5.16",
        "@storybook/addon-essentials": "^6.5.16",
        "@storybook/addon-interactions": "^6.5.16",
        "@storybook/addon-links": "^6.5.16",
        "@storybook/builder-webpack4": "^6.5.16",
        "@storybook/builder-webpack5": "^6.5.16",
        "@storybook/manager-webpack4": "^6.5.16",
        "@storybook/manager-webpack5": "^6.5.16",
        "@storybook/preact": "^6.5.16",
        "@storybook/testing-library": "^0.0.13",
        "@testing-library/dom": "^9.0.0",
        "@testing-library/preact": "^3.2.3",
        "@types/enzyme": "^3.10.12",
        "@types/jest": "^29.4.0",
        "@types/node": "^18.14.5",
        "@types/preact-custom-element": "^4.0.1",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.54.0",
        "babel-loader": "^8.3.0",
        "chokidar": "^3.5.3",
        "core-js": "^3.29.0",
        "cypress": "^12.7.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-preact-pure": "^4.1.0",
        "enzyme-to-json": "^3.6.2",
        "esbuild": "^0.17.10",
        "esbuild-jest": "^0.5.0",
        "esbuild-loader": "^3.0.1",
        "esbuild-sass-plugin": "^2.6.0",
        "eslint": "^8.35.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "http-server": "^14.1.1",
        "jest": "^29.4.3",
        "jest-environment-jsdom": "^29.4.3",
        "jest-environment-jsdom-sixteen": "^2.0.0",
        "jest-extended": "^3.2.4",
        "jest-preset-preact": "^4.0.5",
        "jest-resolve": "^29.5.0",
        "lerna": "^6.5.1",
        "postcss": "^8.4.21",
        "postcss-modules": "^6.0.0",
        "prettier": "^2.8.4",
        "sass": "^1.59.2",
        "sinon": "^15.0.1",
        "tiny-glob": "^0.2.9",
        "ts-loader": "^9.4.2",
        "tsconfig-paths-webpack-plugin": "^4.0.0",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@preact/signals": "^1.1.3",
        "preact": "^10.13.0",
        "preact-compat": "^3.19.0",
        "preact-custom-element": "^4.2.1"
    }
}
