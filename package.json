{
  "name": "root",
  "private": true,
  "engines": {
    "node": ">=16.20.0"
  },
  "engineStrict": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/components/**"
    ],
    "nohoist": [
      "packages/angular-adapter",
      "packages/angular-adapter/*",
      "@no-gravity-elements/angular-adapter"
    ]
  },
  "scripts": {
    "dev": "yarn build:dev && yarn storybook",
    "dev:docs": "vitepress dev docs",
    "start": "yarn dev",
    "build": "tsc && node ./esbuild.js",
    "build:dev": "tsc && node ./esbuild.js --dev",
    "build:watch": "tsc && node ./esbuild.js --watch",
    "build:prod": "tsc && NODE_ENV=production node ./esbuild.js",
    "build:all": "yarn build:prod && yarn build-adapters && yarn build:docs",
    "build:docs": "vitepress build docs",
    "build-storybook": "build-storybook",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "test:coverage": "yarn test && yarn coverage",
    "coverage": "http-server -o coverage/lcov-report",
    "e2e": "cypress run",
    "cypress:open": "cypress open",
    "lint": "yarn eslint .",
    "lint:fix": "yarn eslint . --fix",
    "format": "yarn prettier --write .",
    "validate": "yarn lint && yarn test:ci",
    "analyze": "rm -rf dist && NODE_ENV=production node ./esbuild.js --analyze && webpack-bundle-analyzer dist/stats.json",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "docs:preview": "yarn docs:build && yarn docs:serve",
    "commit": "cz",
    "prepare-release": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "yarn build:all && yarn prepare-release && lerna publish",
    "release:beta": "yarn build:all && lerna publish --canary --preid beta",
    "clean": "yarn cache clean --force",
    "clean:all": "yarn clean && lerna clean --yes && rm -rf ./packages/**/lib",
    "clean:docs": "rm -rf docs/.vitepress/dist",
    "update-deps": "ncu -u && yarn install",
    "check-updates": "ncu",
    "component-generator": "node node_modules/@no-gravity-tools/component-generator/lib/index.js",
    "storybook": "start-storybook -p 6006",
    "link-tools": "lerna exec -- yarn link",
    "unlink-tools": "lerna exec -- yarn unlink",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@limegrass/eslint-plugin-import-alias": "^1.0.6",
    "@no-gravity-tools/component-generator": "1.0.17",
    "@storybook/addon-actions": "6.5.16",
    "@storybook/addon-essentials": "6.5.16",
    "@storybook/addon-interactions": "6.5.16",
    "@storybook/addon-links": "6.5.16",
    "@storybook/builder-webpack4": "6.5.16",
    "@storybook/builder-webpack5": "6.5.16",
    "@storybook/manager-webpack4": "6.5.16",
    "@storybook/manager-webpack5": "6.5.16",
    "@storybook/preact": "6.5.16",
    "@storybook/testing-library": "0.0.13",
    "@storybook/web-components": "6.5.16",
    "@testing-library/dom": "^9.0.0",
    "@testing-library/preact": "^3.2.3",
    "@types/enzyme": "^3.10.12",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.5",
    "@types/preact-custom-element": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "babel-loader": "8.3.0",
    "chokidar": "^4.0.1",
    "chromatic": "^11.0.7",
    "core-js": "^3.29.0",
    "csso": "^5.0.5",
    "cypress": "^12.7.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.1.0",
    "enzyme-to-json": "^3.6.2",
    "esbuild": "^0.17.10",
    "esbuild-jest": "^0.5.0",
    "esbuild-loader": "^3.0.1",
    "esbuild-sass-plugin": "^2.6.0",
    "eslint": "^8.36.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "http-server": "^14.1.1",
    "husky": "8.0.0",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "jest-environment-jsdom-sixteen": "^2.0.0",
    "jest-extended": "^3.2.4",
    "jest-preset-preact": "^4.0.5",
    "jest-resolve": "^29.5.0",
    "lerna": "^6.5.1",
    "lit-html": "^2.7.0",
    "nvm": "^0.0.4",
    "postcss": "^8.4.21",
    "postcss-modules": "^6.0.0",
    "prettier": "^2.8.4",
    "sass": "^1.59.2",
    "sinon": "^15.0.1",
    "tiny-glob": "^0.2.9",
    "ts-loader": "^9.4.2",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.5",
    "web-component-analyzer": "^2.0.0-next.4",
    "yarn": "^1.22.21",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "imagemin": "^8.0.1",
    "vitepress": "^1.0.0-rc.40",
    "npm-check-updates": "^16.14.12",
    "string-width": "4.2.3",
    "strip-ansi": "6.0.1"
  },
  "dependencies": {
    "@preact/signals": "^1.1.3",
    "classnames": "^2.5.1",
    "preact": "^10.13.0",
    "preact-custom-element": "^4.3.0"
  },
  "version": "",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
