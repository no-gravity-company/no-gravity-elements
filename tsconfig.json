{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "jsxFactory": "h",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "experimentalDecorators": true,
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "@atoms/*": ["packages/components/atoms/*"],
      "@molecules/*": ["packages/components/molecules/*"],
      "@organisms/*": ["packages/components/organisms/*"],
      "@templates/*": ["packages/components/templates/*"],
      "@pages/*": ["packages/components/pages/*"],
      "@components/*": ["packages/components/*"],
      "@hooks/*": ["packages/hooks/*"],
      "@utils/*": ["packages/utils"],
      "@types": ["packages/types/index"],
      "@context/*": ["packages/context"],
      "@const/*": ["packages/const"],
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    },
    "jsxFragmentFactory": "Fragment",
    "baseUrl": "./",
    "types": ["jest", "preact"],
    "outDir": "lib"
  },
  "include": ["**/*.ts", "**/*.tsx", "typings/**/*.d.ts"],
  "exclude": ["node_modules", "**/*.integration.spec.ts", "cypress.config.ts"]
}
