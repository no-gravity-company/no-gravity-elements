{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "jsxFactory": "h",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "experimentalDecorators": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@hooks/*": ["packages/hooks/*"],
      "@utils/*": ["packages/utils/*"],
      "@context/*": ["packages/context"],
      "@const/*": ["packages/const"],
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"],
      "@no-gravity-elements/types": ["packages/types/index"]
    },
    "jsxFragmentFactory": "Fragment",
    "baseUrl": "./",
    "types": ["jest", "preact"],
    "outDir": "lib"
  },
  "include": ["**/*.ts", "**/*.tsx", "typings/**/*.d.ts"],
  "exclude": ["node_modules", "**/*.integration.spec.ts", "cypress.config.ts"]
}
