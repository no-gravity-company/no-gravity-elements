{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "independent",
  "packages": ["packages/components/**/*"],
  "npmCLient": "yarn",
  "ignoreChanges": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.tsx",
    ".gitignore",
    "**/__snapshots__/*",
    "**/*.md"
  ]
}
